<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
  <section>
    <h1>
      <%= flight.airline %> 
    </h1>
    <div>Airport: </div>
    <div><%= flight.airport %></div>
    <div>Flight Number: </div>
    <div><%= flight.flightNo%></div>
    <div>Departs On: </div>
    <div><%= flight.departs%></div>
    <div>Destinations:</div>
    <ul>
      <%- flight.destinations.map(d => 
        `<li>${d.airport}</li>`
      ).join('') %>
    </ul>  
  </section>
  <form id="add-des-to-des" action="/flights/<%= flight._id %>/destinations" method="POST">
    <select name="destinationId">
      <%- destinations.map(d => 
        `<option value="${d._id}">${d.airport}</option>`
      ).join('') %>
    </select>
    <button type="submit">Add to Destinations</button>
  </form>
    
  <h2>Tickets</h2>
  <form 
    id="add-tickets-form"
    action="/flights/<%= flight._id %>/tickets"
    method="POST"
  >
    <label for="seat-textarea">Seat:</label>
    <textarea name="seat" id="seat-textarea" required pattern="[A-F][1-9]\d?"></textarea>
    <label for="price-seatarae">Price: </label>
    <textarea name="price" id="price-textarea"></textarea>
    <button type="submit">Add Ticket</button>
  </form>
  <% if (flight.tickets.length) { %>
    <table>
      <thead>
        <tr>
          <th>Seat Number: </th>
          <th>Price: </th>
        </tr>
      </thead>
      <tbody>
        <% flight.tickets.forEach(function(ticket) { %>
          <tr>
            <td><%= ticket.seat %></td>
            <td><%= ticket.price %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <h3>No Tickets Yet</h3>
  <% } %>
</main>


<%- include('../partials/footer') %>
</main>
  
