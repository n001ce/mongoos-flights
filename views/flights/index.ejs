<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <title>Flights List</title>
</head>
<body>
    <nav>
        <a id="newFlight" href="/flights/new">Add New Flight</a>
        <a id="returnHome" href="../">Return Home</a>
      </nav>
    <h1>Flights List as of: <%= time %></h1>
    <% if(error) { %>
        <h2><%= error %></h2>
      <% } %>
      <ul>
            <table>
                <thead>
                  <tr>
                    <th>Airline</th>
                    <th>Airport</th>
                    <th>Flight Number</th>
                    <th>Departs</th>
                  </tr>
                </thead>
                <tbody>
                    <% Flight.forEach(function(flight) { %>                    
                    <tr>
                      <td><%= flight.airline %></td>
                      <td><%= flight.airport %></td>
                      <td><%= flight.flightNo %></td>
                      <td><%= flight.departs ? flight.departs : date = new Date(), date.setFullYear(date.getFullYear()+1)%></td>
                    </tr>
                    <% }) %>                
                </tbody>
              </table>
        </ul>
  </body>
</html>