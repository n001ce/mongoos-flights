<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>
  <section class="bg-dark text-light p-5 text-center text-sm-start">
    <div class="container">
      <div class="d-sm-flex align-items-center justify-content-between">
        <div>
          <h1>View All <span class="text-warning">Flights</span></h1>
          <p class="lead my-4">Unit 2 Lab <span class="text-warning">||</span> Mongoose-Flight <span class="text-warning">||</span>  Alex Cormier</p>
          <p class="lead my-4"><span class="text-info">Use NavBar above to book a Flight or go to the Main Menu</span></p>
        </div>
        <img class="img-fluid w-50 d-none d-sm-block" src="imgs/airplane.png" alt=""/>
      </div>
    </div>
  </section>
  <section class="bg-primary text-light p-5 text-center">
    <div class="container">
      <h1>Flights As Of: <%= time %></h1>
    </div>
  </section>
    <% if(error) { %>
        <h2><%= error %></h2>
      <% } %>
      <ul>
            <table class="table table-hover table-bordered">
                <thead>
                  <tr class="table-primary">
                    <th>Airline</th>
                    <th>Airport</th>
                    <th>Flight Number</th>
                    <th>Departs</th>
                  </tr>
                </thead>
                <tbody>
                    <% Flight.forEach(function(flight) { %>                    
                    <tr>
                      <td class="table-secondary"><%= flight.airline %></td>
                      <td class="table-secondary"><%= flight.airport %></td>
                      <td class="table-secondary"><%= flight.flightNo %></td>
                      <td class="table-secondary"><%= flight.departs ? flight.departs : null%></td>
                      <td class="table-secondary"><form action="/flights/<%= flight._id %>">
                      <button class="input-group-btn type="submit">Details</button></form>
                    </tr>
                    <% }) %>                
                </tbody>
              </table>
        </ul>
    
  </body>
</html>